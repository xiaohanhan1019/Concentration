<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorDefaultBackground</item>
    </style>

    <style name="anim_popupwindow">
        <item name="android:windowEnterAnimation">@anim/popupwindow_bottom_up_in</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_bottom_up_out</item>
    </style>

</resources>
