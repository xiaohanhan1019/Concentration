<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/record_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/record_working_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="x Minute"
                android:textColor="@color/colorLightBlack"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <TextView
                android:id="@+id/record_is_interrupted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="interrupted!"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:textColor="@color/colorOrangeRed"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/record_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2018-5-01 19:32:32"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>

    </LinearLayout>

</LinearLayout>